{
    "compilerOptions": {
      "target": "ES2022",                // Targets Node 18+ features
      "module": "NodeNext",              // Uses modern module resolution
      "moduleResolution": "NodeNext",
      "rootDir": "./",                   // Where your source files are
      "outDir": "./dist",                // Where the compiled JS goes
      "esModuleInterop": true,           // Allows importing CommonJS modules
      "forceConsistentCasingInFileNames": true,
      "strict": true,                    // Enables strict type-checking options
      "skipLibCheck": true               // Skips checking .d.ts files (speeds up build)
    },
    "include": ["**/*.ts"],              // Include all TS files
    "exclude": ["node_modules"]
  }